<h1>Listing proposals</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Impact</th>
    <th>Approved?</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @proposals.each do |proposal| %>
  <tr <%= "class='inactive'" unless proposal.approved %>>
    <td><%= proposal.title %></td>
    <td><%= proposal.description %></td>
    <td><%= proposal.impact %></td>
	<td><%= if proposal.approved
then
link_to "cancel", cancel_proposal_path(proposal)
else
link_to "approve", approve_proposal_path(proposal)
end
%></td>
    <td><%= link_to 'Show', proposal %></td>
    <td><%= link_to 'Edit', edit_proposal_path(proposal) %></td>
    <td><%= link_to 'Destroy', proposal, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Proposal', new_proposal_path %>
